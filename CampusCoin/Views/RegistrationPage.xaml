<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:CampusCoin.ViewModels"
             x:DataType="viewModels:RegistrationPageViewModel"
             x:Class="CampusCoin.Views.RegistrationPage"
             Title="RegistrationPage">
    <VerticalStackLayout 
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Center">
        <Grid 
            RowSpacing="5" 
            Grid.Row="1" 
            Margin="20,20,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="300"/>
            </Grid.RowDefinitions>
            <Label
                Grid.Row="1"
                Text="Registration"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                FontAttributes="Bold"
                Padding="0"
                Margin="-5"
                HorizontalOptions="Center"/>

            <StackLayout 
                Grid.Row="2" 
                Orientation="Vertical" 
                HorizontalOptions="Center">
                <Entry 
                    x:Name="txtEmail" 
                    Background="#512BD4"
                    Text="{Binding Email}" 
                    Placeholder="Email:"                                                      
                    VerticalOptions="Center"                      
                    HorizontalOptions="Fill"                       
                    Margin="0,0,20,10"/>
                <Entry 
                    x:Name="txtPassword"
                    Background="#512BD4"
                    Text="{Binding Password}"
                    Placeholder="Password:"
                    VerticalOptions="Center" 
                    HorizontalOptions="Fill" 
                    IsPassword="True"
                    Margin="0,0,20,10"/>
                <Entry 
                    x:Name="txtPhonenumber"
                    Background="#512BD4"
                    Text="{Binding Phonenumber}"
                    Placeholder="Phone number:"
                    VerticalOptions="Center" 
                    HorizontalOptions="Fill" 
                    Margin="0,0,20,10"/>    
                <Entry 
                    x:Name="txtFirstname"
                    Background="#512BD4"
                    Text="{Binding Firstname}"
                    Placeholder="First name:"
                    VerticalOptions="Center" 
                    HorizontalOptions="Fill" 
                    Margin="0,0,20,10"/>
                <Entry 
                    x:Name="txtLastname"
                    Background="#512BD4"
                    Text="{Binding Lastname}"
                    Placeholder="Last name:"
                    VerticalOptions="Center" 
                    HorizontalOptions="Fill" 
                    Margin="0,0,20,10"/>
                <Button
                    x:Name="AttemptRegistrationBtn"
                    Text="Create My Account"
                    SemanticProperties.Hint="Register"
                    HorizontalOptions="Center"
                    FontAttributes="Bold"
                    WidthRequest="200"
                    Margin="0,15,0,0"
                    IsEnabled="True"
                    Command="{Binding RegistrationCommand}"/>
            </StackLayout>
        </Grid>
    </VerticalStackLayout>
</ContentPage>